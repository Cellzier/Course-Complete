      const username = document.getElementById("username").value;
      if (!username) {
        alert("Please enter your Discord username.");
        return;
      }

      fetch("https://discord.com/api/webhooks/1368513126525435956/BtTxT4B1PzBBz81zB02fHf0i7v1meiReohuVlmF0VF2PKsLo1BFXeF_G62eTpwe-mvdK", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          content: `ðŸŽ‰ **@${username} has just completed the Cellzier Reselling Program!**\nGive them a huge shoutout! ðŸ”¥ðŸ“±`
